<p id="notice"><%= notice %></p>

<h1>Listing Environments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @environments.each do |environment| %>
      <tr>
        <td><%= environment.name %></td>
        <td><%= environment.url %></td>
        <td><%= environment.server_status %></td>
        <td>Ruby branch: <%= environment.last_deployed_ruby_branch %></td>
        <td>PHP branch: <%= environment.last_deployed_php_branch %></td>
        <td><%= link_to 'Show', environment %></td>
        <td><%= link_to 'Edit', edit_environment_path(environment) %></td>
        <td><%= link_to 'Destroy', environment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

