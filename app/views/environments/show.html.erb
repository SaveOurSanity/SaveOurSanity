<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_environment_path(@environment) %> |
<%= link_to 'Back', environments_path %>

<%= form_for(@deploy) do |f| %>

  author: <%= f.text_field :author %></br>
  ruby branch: <%= f.text_field :ruby_branch_name %></br>
  php branch: <%= f.text_field :php_branch_name %>
  <%= f.hidden_field :environment_id %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @environment.deploys.each do |deploy| %>
      <tr>
        <td><%= deploy.author %></td>
        <td><%= deploy.ruby_branch_name %></td>
        <td><%= deploy.php_branch_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
