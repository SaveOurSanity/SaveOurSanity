<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_environment_path(@environment) %> |
<%= link_to 'Back', environments_path %>

<%= form_for(@deploy, url: {action: "create"}) do |f| %>

  <%= f.text_field :author %>
  <%= f.text_field :branch_name %>
  <%= f.hidden_field :environment_id %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @environment.deploys.each do |deploy| %>
      <tr>
        <td><%= deploy.author %></td>
        <td><%= deploy.branch_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
